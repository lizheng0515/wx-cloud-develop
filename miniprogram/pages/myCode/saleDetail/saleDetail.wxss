/* pages/myCode/saleDetail/saleDetail.wxss */
page{
  background-color: #fff;
  font-family:"PingFang SC";
}
.nowDetailTitle{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  padding: 3px 20px;
  font-size: 12px;
  background: #e2ca9e;
  color: #fff;
}
.sale-detail-cont{
  margin-top: 25px;
}
.item-detail{
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
 
}
.user-name{
  display: inline-block;
  width: 35%;
}
.user-name view{
  font-size: 14px;
  color: #000;
  /* margin-bottom: 5px; */
}
.user-name text{
  font-size: 14px;
  color: #999;
}
.item-state{
  display: inline-block;
  padding-left: 30px;
  color: #e2ca9e;
  font-size: 22px;
  vertical-align: top;
  margin-top: 16px;

}
.item-adv{
  float: right;
  display: inline-block;
  text-align: right;
  color: #ccc
}
.item-adv view{
  /* margin-bottom: 5px; */
  font-size: 12px;
}
.item-adv text{
   font-size: 12px;
}
.item-adv .adv-name{
  display: inline-block;
  max-width: 140px;
  color: #333;
  font-size: 14px;
}
.w-bg-item{
  padding: 8px 20px;
}
.b-bg-item{
  background: #f7efe2;
  padding: 8px 20px;
}
.state_0{
  color: #ccc;
}
.state_1,.state_2{
  color: #e2ca9e;
}
.state_3{
  color: rgb(245, 51, 51);
}